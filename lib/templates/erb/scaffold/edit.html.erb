<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
    <h1 class="font-weight-bold display-4 mb-4">Edit <%= singular_table_name %></h1>
    <% if @<%= model_resource_name %>.persisted? %>
      <%= button_to 'Destroy', @<%= model_resource_name %>, method: :delete, class: "btn btn-link text-danger", data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>

  <%= render 'form', singular_table_name: @<%= singular_table_name %> %>
</div>